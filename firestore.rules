rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User data rules - users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User's devices subcollection
      match /devices/{deviceId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's alarms subcollection
      match /alarms/{alarmId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's rooms subcollection
      match /rooms/{roomId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Face mappings - system managed (read for auth, write only for system)
    match /face_mappings/{mappingId} {
      // Allow read for any authenticated user (for face auth lookup)
      allow read: if request.auth != null;
      // Allow write only during user creation (when auth.uid matches the userId being created)
      allow create: if request.auth != null;
      // Allow update only for the mapped user
      allow update: if request.auth != null && 
                       request.auth.uid == resource.data.userId;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

